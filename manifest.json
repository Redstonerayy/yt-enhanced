{
	"manifest_version": 3,
	"name": "Youtube Video Looper",
	"description": "Loop a video on the Youtube Website",
	"version": "1.0.1",
	"permissions": ["webNavigation", "storage", "downloads", "tabGroups"],
	"background": {
		"service_worker": "background/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": [
				"injected/lib.js",
				"injected/preload.js",
				"injected/loop.js",
				"injected/save.js",
				"injected/main.js"
			],
			"css": ["injected/ui.css"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["injected/ui.html"],
			"matches": ["https://www.youtube.com/*"]
		},
		{
			"resources": ["ui-images/*"],
			"matches": ["https://www.youtube.com/*"]
		}
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": "icons/rounded-128.png"
	},
	"icons": {
		"16": "icons/rounded-16.png",
		"32": "icons/rounded-32.png",
		"64": "icons/rounded-64.png",
		"128": "icons/rounded-128.png"
	}
}
